= form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :weight
    = f.number_field :weight
  .field
    = f.label :quantity
    = f.number_field :quantity
  .field
    = f.label :cost
    = f.text_field :cost
  .field
    = f.label :freight_modifier
    = f.number_field :freight_modifier
  .field
    = f.label :price_modifier
    = f.number_field :price_modifier
  .actions
    = f.submit 'Save'
