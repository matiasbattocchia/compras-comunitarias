- model_class = Supplier
.page-header
  %h1=t '.title', :default => model_class.model_name.human(count: 'other')

.row-fluid

  .span2
    %ul.nav.nav-list.well
      %li.nav-header= t('.actions', :default => t("helpers.actions"))
      %li.active= link_to t('.list', :default => t("helpers.links.list")), suppliers_path
      %li= link_to t('.new', :default => t("helpers.links.new")), new_supplier_path
  
  .span10
    = bootstrap_flash
    
    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:name)
      %tbody
        - @suppliers.each do |supplier|
          %tr.pointer{'data-link' => supplier_path(supplier)}
            %td= link_to supplier.name, supplier_path(supplier)
