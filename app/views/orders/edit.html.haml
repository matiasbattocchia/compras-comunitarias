- model_class = Order
.page-header
  %h1=t '.title', :default => t('helpers.titles.edit') + ' ' + model_class.model_name.human

.row-fluid

  .span2
    %ul.nav.nav-list.well
      %li.nav-header= t('.actions', :default => t("helpers.actions"))
      %li= link_to t('.list', :default => t("helpers.links.list")), orders_path
      %li= link_to t('.new', :default => t("helpers.links.new")), new_order_path
      %li= link_to t('.show', :default => t("helpers.links.show")), order_path(@order)
      %li.active= link_to t('.edit', :default => t("helpers.links.edit")), edit_order_path(@order)
      %li= link_to t('.destroy', :default => t("helpers.links.destroy")), order_path(@order), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }

  .span10
    = bootstrap_flash
    
    = render :partial => "form"
