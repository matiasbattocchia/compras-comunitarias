- model_class = Order
.page-header
  %h1=t '.title', :default => model_class.model_name.human(count: 'other')

.row-fluid

  .span2
    %ul.nav.nav-list.well
      %li.nav-header= t('.actions', :default => t("helpers.actions"))
      %li.active= link_to t('.list', :default => t("helpers.links.list")), orders_path
      %li= link_to t('.new', :default => t("helpers.links.new")), new_order_path
  
  .span10
    = bootstrap_flash
    
    %table.table.table-striped
      %thead
        %tr
          %th= model_class.human_attribute_name(:id)
      %tbody
        - @orders.each do |order|
          %tr.pointer{'data-link' => order_path(order)}
            %td= link_to order.id, order_path(order)
