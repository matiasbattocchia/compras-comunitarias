- model_class = <%= resource_name.classify %>
.page-header
  %h1
    =t '.title', :default => model_class.model_name.human
    %small= @<%= resource_name %>.<%= columns.first.name %>

.row-fluid

  .span2
    %ul.nav.nav-list.well
      %li.nav-header= t('.actions', :default => t("helpers.actions"))
      %li= link_to t('.list', :default => t("helpers.links.list")), <%= controller_routing_path %>_path
      %li= link_to t('.new', :default => t("helpers.links.new")), new_<%= singular_controller_routing_path %>_path
      %li.active= link_to t('.show', :default => t("helpers.links.show")), <%= singular_controller_routing_path %>_path(@<%= resource_name %>)
      %li= link_to t('.edit', :default => t("helpers.links.edit")), edit_<%= singular_controller_routing_path %>_path(@<%= resource_name %>)
      %li= link_to t('.destroy', :default => t("helpers.links.destroy")), <%= singular_controller_routing_path %>_path(@<%= resource_name %>), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }

  .span10
    = bootstrap_flash
    
    %h2 Atributos
    %div.form-horizontal
      <%- columns.each do |column| -%>
      %div.control-group
        %label.control-label= model_class.human_attribute_name(:<%= column.name %>)
        %div.controls
          %div.imput= @<%= resource_name %>.<%= column.name %>
      <%- end -%>
