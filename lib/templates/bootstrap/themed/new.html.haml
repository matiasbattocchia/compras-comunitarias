- model_class = <%= resource_name.classify %>
.page-header
  %h1
    =t '.title', :default => model_class.model_name.human
    %small Nuevo

.row-fluid

  .span2
    %ul.nav.nav-list.well
      %li.nav-header= t('.actions', :default => t("helpers.actions"))
      %li= link_to t('.list', :default => t("helpers.links.list")), <%= controller_routing_path %>_path
      %li.active= link_to t('.new', :default => t("helpers.links.new")), new_<%= singular_controller_routing_path %>_path

  .span10
    = bootstrap_flash
    
    = render :partial => "form"
